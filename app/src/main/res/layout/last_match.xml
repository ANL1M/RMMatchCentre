<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHomeLM"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_alignParentTop="false"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="15sp"
            android:contentDescription="@string/image_home"/>

        <TextView
            android:id="@+id/tvHomeLastMatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Реал Мадрид"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvLastMatchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:text="3:1"/>

        <TextView
            android:id="@+id/tvLastMatchDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_centerVertical="false"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="18.03.17 | 18:15"/>

        <TextView
            android:id="@+id/tvLigaNameLM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="ИСПАНИЯ. Лига 1. 28-й тур"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGuestLM"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="15sp"
            android:contentDescription="@string/image_away"
            tools:mockup=""/>

        <TextView
            android:id="@+id/tvGuestLastMatch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Барселона"/>

    </LinearLayout>

</LinearLayout>
