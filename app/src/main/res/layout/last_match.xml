<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvRefreshDateLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingBottom="10sp"
        android:textColor="@android:color/black"
        tools:text="Обновлено 13.03.17 | 22:19"/>

    <TextView
        android:id="@+id/tvGuestLastMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Барселона"
        android:layout_alignBottom="@+id/ivGuestLM"
        android:layout_toEndOf="@+id/ivHomeLM"
        android:layout_marginBottom="32dp"/>

    <TextView
        android:id="@+id/tvHomeLastMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Реал Мадрид"
        android:layout_marginTop="39dp"
        android:layout_alignTop="@+id/ivHomeLM"
        android:layout_toEndOf="@+id/ivHomeLM"/>

    <TextView
        android:id="@+id/tvLastMatchDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="18.03.17 | 18:15"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tvLigaNameLM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        tools:text="ИСПАНИЯ. Лига 1. 28-й тур"
        android:layout_above="@+id/tvLastMatchDate"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:id="@+id/ivGuestLM"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@+id/tvLastMatchDate"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="43dp"
        android:layout_toStartOf="@+id/tvLastMatchResult"
        android:contentDescription="@string/image_away"
        tools:mockup=""/>

    <ImageView
        android:id="@+id/ivHomeLM"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/ivGuestLM"
        android:layout_marginTop="33dp"
        android:contentDescription="@string/image_home"/>

    <TextView
        android:id="@+id/tvLastMatchResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvLigaNameLM"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:text="3:1"/>

</RelativeLayout>
