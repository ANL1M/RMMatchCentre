<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivHomeFM"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentTop="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="15sp"
                android:contentDescription="@string/image_home"/>

            <TextView
                android:id="@+id/tvHomeLastMatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Реал Мадрид"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvVS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/str_vs"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvLastMatchDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="false"
                android:gravity="center"
                android:textSize="18sp"
                tools:text="18.03.17 | 18:15"/>

            <TextView
                android:id="@+id/tvLigaNameFM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="false"
                android:gravity="center"
                android:textSize="18sp"
                tools:text="ИСПАНИЯ. Лига 1. 28-й тур"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivGuestLM"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:layout_alignParentStart="false"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30sp"
                android:layout_marginRight="15sp"
                android:contentDescription="@string/image_away"
                tools:mockup=""/>

            <TextView
                android:id="@+id/tvGuestLastMatch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Барселона"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.SwipeRefreshLayout>