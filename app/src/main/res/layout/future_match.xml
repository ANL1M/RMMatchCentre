<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvRefreshDateFM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:paddingBottom="10sp"
            android:textColor="@android:color/black"
            tools:text="Обновлено 13.03.17 | 22:19" />

        <TextView
            android:id="@+id/tvGuestLastMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Барселона"
            android:layout_marginTop="38dp"
            android:layout_alignTop="@+id/ivGuestLM"
            android:layout_toEndOf="@+id/ivGuestLM"/>

        <TextView
            android:id="@+id/tvHomeLastMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="Реал Мадрид"
            android:layout_alignTop="@+id/ivHomeFM"
            android:layout_toEndOf="@+id/ivGuestLM"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tvLastMatchDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="18.03.17 | 18:15"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tvLigaNameFM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:gravity="center"
            android:textSize="18sp"
            tools:text="ИСПАНИЯ. Лига 1. 28-й тур"
            android:layout_above="@+id/ivGuestLM"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/ivGuestLM"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="27dp"
            android:contentDescription="@string/image_away"
            tools:mockup=""
            android:layout_below="@+id/tvLastMatchDate"
            android:layout_alignParentStart="true"/>

        <ImageView
            android:id="@+id/ivHomeFM"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:contentDescription="@string/image_home"
            android:layout_marginTop="38dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/tvHomeLastMatch"/>

    </RelativeLayout>


</android.support.v4.widget.SwipeRefreshLayout>